<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/list_row_start_color">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:layout_scrollFlags="scroll|enterAlways"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        />


    <TextView
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name      : "
        android:id="@+id/namet"
        android:textSize="20dp"
        android:layout_marginTop="150dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="11"
        android:layout_marginTop="140dp"
        android:layout_toRightOf="@+id/namet"
        android:id="@+id/namee"
        />

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/namee"
        android:id="@+id/notelpt"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:text="No Telp.  : "
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tesis"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tesisright"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/tesis"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tesisleft"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/tesis"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="11"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="0dp"
        android:id="@+id/notelpe"
        android:layout_toRightOf="@+id/notelpt"
        android:layout_below="@+id/namet"
        android:inputType="phone"
        />
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/notelpe"
    android:text="Status      : "
    android:textSize="20dp"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="10dp"
    android:id="@+id/tspin"
    />
    <Spinner
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notelpe"
        android:layout_toRightOf="@+id/tspin"
        android:layout_marginTop="20dp"

        android:id="@+id/spin"
        >
    </Spinner>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/editer"
        android:text="Edit"
        android:onClick="onClick"
        android:layout_centerHorizontal="true"
        />




</RelativeLayout><!-- From: file:/C:/Users/BlueLightning/AndroidStudioProjects/SqLite2/app/src/main/res/layout/edit_activity.xml -->